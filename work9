#include <iostream>
using namespace std;

int main() {
	setlocale(0, "");
	int a;
	int k = 1;
	cout << "Введите число (1 - 15): ";
	cin >> a;
	if (1 <= a and a <= 15) {
		while (k <= a) {
			cout << "\nЦикл отработал.Круг: " << k << "\n";
			k++;
		}
	}
	else {
		cout << "Вы ввели число, которое не входит в данный диапозон\n";
	}
	system("pause");
	return 0;
}
